<%= form_for(@owner) do |f| %>
  <% if @owner.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@owner.errors.count, "error") %> prohibited this owner from being saved:</h2>

      <ul>
      <% @owner.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h3>Your Personal Information</h3>
  <span class="red small">We will only share your personal information with your permission</span>
  <div class="field">
    <%= f.label :full_name, "Full Name*" %><br />
    <%= f.text_field :full_name %>
  </div>
  <div class="field">
    <%= f.label :email, "Email*" %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :address_one, "Address*" %><br />
    <%= f.text_field :address_one %>
  </div>
  <div class="field">
    <%= f.label :address_two, "Address line two (optional)" %><br />
    <%= f.text_field :address_two %>
  </div>
  <div class="field pull-left">
    <%= f.label :city, "City*" %><br />
    <%= f.text_field :city, class:"city" %>
  </div>
  <div class="field pull-left">
    <%= f.label :state, "State*" %><br />
    <%= f.select :state, us_states, class:"state" %>
  </div>  
  <div class="field pull-left">
    <%= f.label :zip, "Zip*" %><br />
    <%= f.text_field :zip, class:"zip" %>
  </div>
  <h3>Your first Petpass Pet</h3>
  <%= f.fields_for :pets do |p| %>  
    <div class="field">
      <%= p.label :name %><br />
      <%= p.text_field :name %>
    </div>
    <div class="field">
      <%= p.label :breed %><br />
      <%= p.text_field :breed %>
    </div>
    <div class="field">
      <%= p.label :rabies_expiration %><br />
      <%= p.text_field :rabies_expiration %>
    </div>
    <div class="field">
      <%= p.label :color %><br />
      <%= p.text_field :color %>
    </div>
    <div class="field">
      <%= p.label :age %><br />
      <%= p.number_field :age %>
    </div>
    <div class="field">
      <%= p.label :sex %><br />
      <%= p.select "sex", ["Male", "Female"] %>
    </div>
    <div class="field">
      <%= p.label :markings %><br />
      <%= p.text_field :markings %>
    </div>
    <div class="field">
      <%= label_tag :rabies_vaccination, "Rabies Vaccinated" %><br />
      <%= check_box_tag :rabies_vaccination %>
    </div>
    <div class="field rabies_tag" style="display:none;">
      <%= p.label :rabies_tag_number, "Rabies Tag Number*" %><br />
      <%= p.text_field :rabies_tag_number %>
    </div>
    <div class="field rabies_tag" style="display:none;">
      <%= p.label :rabies_attachment, "Upload Proof of Rabies Vaccination" %><br />
      <%= p.file_field :rabies_attachment %>
    </div>
    <div class="field">
      <%= label_tag :spayed_neutered %><br />
      <%= check_box_tag :spayed_neutered %>
    </div>
    <div class="field upload_spayed" style="display:none;">
      <%= p.label :spayed_neutered_attachment, "Upload Proof of Spayed/Neutered" %><br />
      <%= p.file_field :spayed_neutered_attachment %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Submit Owner & Pet", class:'login_button' %>
  </div>
<% end %>
