<div class="row hero">
  <div class="span7">
    <%= image_tag 'hero/hero.png' %>
  </div>
  <div class="span5 pitch">
    <h2>Manage your pet's licenses and medical information</h2>
    <div class="lead">
      Petpass . . . 
      <ul>
        <li>puts local government and pet services at your fingertips</li>
        <li>lets you access your pet's data from anywhere</li>
        <li>helps to recover your pet</li>
    </div>
  </div>
</div>

<div class="new_owner_form row">
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <h3>Get Started</h3>
  <div class="field">
    <%= f.label :full_name, "Full Name*" %><br />
    <%= f.text_field :full_name, :autofocus => true, class:"required" %>
  </div>
  <div class="field">
    <%= f.label :email, "Email*" %><br />
    <%= f.text_field :email, class:"required email" %>
  </div>
  <div class="field">
    <%= f.label :password, "Password*" %><br />
    <%= f.password_field :password, class:"required" %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, class:"required" %>
  </div>

  <h3>Your Personal Information</h3>
  <span class="red small">We only share your information with your permission</span><br />
  <br />
  <div class="field">
    <%= f.label :address_one, "Address*" %><br />
    <%= f.text_field :address_one, class:"required" %>
  </div>
  <div class="field">
    <%= f.label :address_two, "Address line two" %><br />
    <%= f.text_field :address_two %>
  </div>
  <div class="field pull-left">
    <%= f.label :city, "Municipality*" %><br />
    <%= f.text_field :city, class:"city required" %>
  </div>
  <div class="field">
    <%= f.label :phone, "Phone number (helps with lost pet recovery)" %><br />
    <%= f.text_field :phone, placeholder: "(555) 555-5555" %>
  </div>
  <div class="field pull-left">
    <div class="pull-left">
      <%= f.label :state, "State*" %><br />
      <%= f.select :state, wisconsin, class:"state required" %><br>
    </div>
    <div class="field pull-left">
      <%= f.label :zip, "Zip*" %><br />
      <%= f.text_field :zip, class:"zip required" %>
    </div>
  </div>  
  <div class="clear-both">
    Can't find your State? <%= link_to "request us in your city", "mailto:petpassteam@gmail.com?subject=Come to my city Petpass!" %> <br />
  </div> 
  <h3>Pet Information</h3>
  <%= f.fields_for :pets, resource.pets.build do |p| %>  
    <div class="field">
      <%= p.check_box :recent %> 
      <%= p.label :recent, "Aquired Pet Within Last 30 Days?" %>
    </div>     
    <div class="field">
      <%= p.label :name, "Pet Name*" %><br />
      <%= p.text_field :name, class:"required" %>
    </div>
    <div class="field">
      <%= p.label :avatar, "Pet Picture (helps with lost pet recovery)" %><br />
      <%= p.file_field :avatar %>
    </div>
    <div class="field">
      <div class="row">
      <div class="span3">
        <%= p.label :breed, "Breed*" %><br />
        <%= p.select :breed, breeds, class:"required" %>
      </div>
      <div class="span3">
        <%= p.label :sex, "Sex*" %><br />
        <%= p.select "sex", ["Male", "Female"], class:"required" %>
      </div>
    </div>
    </div>
    <div class="field age">
      <%= p.label :born_on, "Birth day (dd/mm/yyyy)*" %><br />
      <%= p.text_field :born_on, class:"age-input required", placeholder:"dd/mm/yyyy" %>
    </div>     
    <div class="field">
      <%= p.label :color, "Color*" %><br />
      <%= p.text_field :color, class:"required" %>
    </div>  
    <div class="field clear-both">
      <%= p.label :markings, "Markings*" %><br />
      <%= p.text_field :markings, class:"required" %>
    </div>
    <h3>Vaccinations & Microchip Code</h3>
    <div class="field">
      <%= check_box_tag :rabies_vaccination %><%= label_tag :rabies_vaccination, "Rabies Vaccinated?" %>
    </div>
    <div class="field rabies_tag" style="display:none;">
      <%= p.label :rabies_tag_number, "Rabies Tag Number*" %><br />
      <%= p.text_field :rabies_tag_number %>
    </div>
    <div class="field rabies_tag" style="display:none;">
      <%= p.label :rabies_attachment, "Upload Proof of Rabies Vaccination*" %><br />
      <%= p.file_field :rabies_attachment %>
    </div>
    <div class="field rabies_tag" style="display:none;">
      <%= p.label :rabies_expiration, "Rabies Expiration* (dd/mm/yyyy)" %><br />
      <%= p.text_field :rabies_expiration, placeholder:"dd/mm/yyyy" %>
    </div>
    <div class="field">
      <%= check_box_tag :spayed_neutered %><%= label_tag :spayed_neutered, "Spayed or Neutered?" %>
    </div>
    <div class="field upload_spayed" style="display:none;">
      <%= p.label :spayed_neutered_attachment, "Upload Proof of Spayed/Neutered*" %><br />
      <%= p.file_field :spayed_neutered_attachment %>
    </div>
    <div class="field">
      <%= check_box_tag :has_microchip %><%= label_tag :has_microchip, "Microchipped? (helps with lost pet recovery)" %>
    </div>
    <div class="field show_micro" style="display:none;">
      <%= p.label :microchip_code, "Microchip Code*" %><br />
      <%= p.text_field :microchip_code %>
    </div>    
  <% end %>

  <div class="actions">
    <%= f.submit "Register Owner and Pet", class:'login_button' %>
  </div>
<% end %>
</div>
